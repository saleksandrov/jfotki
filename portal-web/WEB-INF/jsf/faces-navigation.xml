<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <description>VIEW PICTURE</description>
      <from-outcome>success</from-outcome>
      <to-view-id>/picture.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <description>ANY ERROR</description>
      <from-outcome>error</from-outcome>
      <to-view-id>/error.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/registration.jsp</from-view-id>
    <navigation-case>
      <description>RETURN</description>
      <from-outcome>success</from-outcome>
      <to-view-id>/login.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <description>error</description>
      <from-outcome>error</from-outcome>
      <to-view-id>/registration.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <description>AddAlbum</description>
      <from-outcome>addAlbum</from-outcome>
      <to-view-id>/addAlbum.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

    <navigation-rule>
      <from-view-id>*</from-view-id>
      <navigation-case>
        <description>home</description>
        <from-outcome>home</from-outcome>
        <to-view-id>/home.jsp</to-view-id>
      </navigation-case>
    </navigation-rule>

    <navigation-rule>
      <from-view-id>*</from-view-id>
      <navigation-case>
        <description>editPicture</description>
        <from-outcome>editPicture</from-outcome>
        <to-view-id>/editPicture.jsp</to-view-id>
      </navigation-case>
    </navigation-rule>

</faces-config>
